{
  "name": "update-node-modules",
  "version": "1.0.5",
  "main": "./dist/main.js",
  "repository": "https://github.com/poad/update-node-modules.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn lint --fix && tsc --project tsconfig-app.json",
    "lint": "eslint src/**/*.ts src/*.ts",
    "test": "NODE_ENV=test node --unhandled-rejections=strict --experimental-modules node_modules/.bin/jest --coverage --passWithNoTests --detectOpenHandles",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27",
    "ts-jest": "^27",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@actions/core": "^1.8.0"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@App/(.*)$": "<rootDir>/src/$1"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true
  }
}
