{
  "name": "update-node-modules",
  "version": "1.0.5",
  "main": "./dist/main.js",
  "repository": "https://github.com/poad/update-node-modules.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn clean && yarn lint --fix && tsc --project tsconfig-app.json",
    "lint": "eslint src/**/*.ts src/*.ts tests/*.ts",
    "test": "NODE_ENV=test node --experimental-vm-modules --unhandled-rejections=strict node_modules/.bin/jest --coverage --passWithNoTests --detectOpenHandles",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@jest/globals": "^28.1.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "tunnel": "^0.0.6"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@App/(.*)$": "<rootDir>/src/$1"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true
  }
}
