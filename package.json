{
  "name": "update-node-modules",
  "version": "1.0.5",
  "main": "./dist/main.js",
  "repository": "https://github.com/poad/update-node-modules.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn clean && yarn lint --fix && tsc --project tsconfig-app.json",
    "lint": "eslint src/**/*.ts src/*.ts tests/*.ts",
    "test": "NODE_ENV=test node --experimental-vm-modules --unhandled-rejections=strict node_modules/.bin/jest --coverage --passWithNoTests --detectOpenHandles",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@jest/globals": "*",
    "@swc/cli": "*",
    "@swc/core": "*",
    "@swc/helpers": "*",
    "@swc/jest": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vercel/ncc": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-config-airbnb-typescript": "*",
    "eslint-config-import": "*",
    "eslint-config-prettier": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-flowtype": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jest": "*",
    "eslint-plugin-prettier": "*",
    "jest": "*",
    "jest-util": "*",
    "regenerator-runtime": "*",
    "swc-loader": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@actions/core": "*",
    "got": ">=13.0.0"
  },
  "resolutions": {
    "got": ">=11.8.5",
    "json5": ">=2.2.3",
    "semver-regex": ">=3.1.3"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^@App/(.*)$": "<rootDir>/src/$1"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  }
}
